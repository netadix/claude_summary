{
  "manifest_version": 3,
  "name": "Claude Memory Saver",
  "version": "1.0.0",
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
    "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Memory Saver"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["<all_urls>"]
    }
  ]
}